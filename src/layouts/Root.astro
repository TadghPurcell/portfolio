---
import '@fontsource/inter';
import Header from '../components/Header';

interface Props {
	title: string;
}

const { title } = Astro.props;

export const metadata = {
	title: 'Tadgh Purcell | Personal Portfolio',
	description: 'Tadgh Purcell is a masters student studying computer science',
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" href="/favicon.ico" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class=`bg-secondary-50 relative bg-gray-50 text-primary-700 pt-28 sm:pt-36`>
		<Header client:load />
		<slot />
	</body>
</html>
<style is:global>
	:root {
		/* --oyb-gradients: rgba(16,185,129,.9), rgba(32,227,178,.8), rgba(12,235,235,.8) */
		--oyb-gradients: rgba(15,115,238,.9), rgba(0,172,255,.8), rgba(110,250,204,.8)
		--primary-color: rgb(15,115,238)
		--blue: rgb(10, 160, 208)
		-my-gray: rgb(167, 158, 158)
	}

	html {
		font-size: 16px;
		box-sizing: border-box;
		scroll-behavior: smooth;
		--line-color: rgb(20 64 56 / 0.1);
	}
	body {
		font-family: 'Inter', sans-serif;
		margin: 0;
		padding: 0;
	}

	.borderGreen {
		@apply border border-primary-950/15;
	}

		/* width */
		::-webkit-scrollbar {
			scrollbar-width: thin;
		}

		/* Track */
		::-webkit-scrollbar-track {
		background: #fdfff4;
		}

		/* Handle */
		::-webkit-scrollbar-thumb {
		background: #1A6251;
		}

		/* Handle on hover */
		::-webkit-scrollbar-thumb:hover {
		background: #174E42;
		}
</style>
